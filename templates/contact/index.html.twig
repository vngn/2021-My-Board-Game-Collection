{% extends 'base.html.twig' %}

{% block titre %}
{{ parent() }} | Contact
{% endblock titre %}

{% block bg %}
{{ include('includes/bg-contact.html.twig') }}
{% endblock bg %}

{% block body %}

<section class="page-form page-first">
    <a href="{{ path('home')}}" class="btn btn-close" title="Revenir à l'accueil"></a>

    <h1>Contacter l'administrateur</h1>
    <h5 class="mt-5">Par mail : vngnpro@gmail.com / Par téléphone : 06 11 43 14 86</h5>
    <hr>
    <h5>En remplissant ce formulaire :</h5>

    {% for label, messages in app.flashes %}
    {% for message in messages %}
    <div class="alert alert-{{ label }} mt-3" role="alert">
        {{ message }}
    </div>
    {% endfor %}
    {% endfor %}

    <div class="row mt-5">
        <div class="col-12">
            {{form(form)}}
        </div>
    </div>
</section>

{% endblock body %}